

<div class="container col-sm-12">
    
        <div class="col-sm-3 col-md-3">
            <%= form_tag mainsearches_path, :method => 'get' do %>
            <%= select_tag :nationality_id,
                            options_for_select(Country.all.collect{|a| ["#{a.country_name}", a.id]}, params[:search] )%>
            <br/>
            <%= select_tag :source_id,
                            options_for_select(Country.all.collect{|a| ["#{a.country_name}", a.id]}, params[:search] )%>
                            <br/>
            <%= select_tag :destination_id,
                            options_for_select(Country.all.collect{|a| ["#{a.country_name}", a.id]}, params[:search] )%>
            <%= submit_tag "Search" %>
             <% end %>

        </div>
        <div class="col-sm-9 col-md-9">
        
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Results</h3>
                   <!-- <div class="pull-right">
                        <button type="button" class="close" aria-label="Close">
                          <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>-->

                    <p id="notice"><%= notice %></p>

                    <h1>Visa Infos</h1>

                    <table>
                      <thead>
                        <tr>
                          <th>Visa info</th>
                          <th>Links</th>
                          <th>Source</th>
                          <th>Destination</th>
                          <th>Nationality</th>
                          <th>Visit purpose</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @visa_infos.each do |visa_info| %>
                          <tr>
                            <td><%= visa_info.visa_info %></td>
                            <td><%= visa_info.links %></td>
                            <td><%= (visa_info.source.try(:country_name) || "NA") %></td>
                            <td><%= (visa_info.destination.try(:country_name) || "NA") %></td>
                            <td><%= (visa_info.nationality.try(:country_name) || "NA") %></td>
                            <td><%= (visa_info.visit_purpose.try(:visit_name) || "NA") %></td>
                            <td><%= link_to 'Show', visa_info %></td>
                            <td><%= link_to 'Edit', edit_visa_info_path(visa_info) %></td>
                            <td><%= link_to 'Destroy', visa_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>

                    <br>

<%= link_to 'New Visa Info', new_visa_info_path %>

