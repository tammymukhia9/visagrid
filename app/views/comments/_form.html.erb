<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
     <%= form.label :member_id %>
     <%= form.select :member_id,
     options_for_select(Member.all.collect {|m| ["#{m.mem_last_name},
     #{m.mem_first_name}", m.id]}), {} %>
  </div>

  <div class="field">
     <%= form.label :visa_info_id %>
     <%= form.select :visa_info_id,
     options_for_select(VisaInfo.all.collect {|v| ["#{v.id}", v.id]}), {} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
